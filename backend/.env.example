# Railway Environment Variables - Set these in Railway Dashboard
# https://railway.app/dashboard -> Your Project -> Variables

# Backend Environment
NODE_ENV=production
PORT=3005

# Database (MongoDB Atlas)
MONGODB_URI=your_mongodb_connection_string_here
DB_RETRY_ATTEMPTS=5
DB_TIMEOUT=30000

# Security
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=7d

# CORS - Frontend URL
FRONTEND_URL=https://track-expenses-079.netlify.app

# Application Settings
APP_NAME=ExpenseTracker
APP_VERSION=1.0.0

# OpenAI (if using chat feature)
OPENAI_API_KEY=your_openai_api_key_here
